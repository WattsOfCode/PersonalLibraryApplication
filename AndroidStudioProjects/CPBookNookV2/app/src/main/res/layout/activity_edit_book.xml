<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditBookActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/text_add_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add/Edit Book"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/img_book_cover_preview"
            android:layout_width="125dp"
            android:layout_height="160dp"
            android:layout_marginTop="24dp"
            android:background="#DDDDDD"
            android:clickable="true"
            android:contentDescription="Book Cover Preview"
            android:focusable="true"
            android:onClick="onClickImage"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@id/edit_book_author"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_add_title"
            app:layout_constraintVertical_bias="1.0"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/text_image_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Tap the image to select a book cover photo."
            android:textSize="12sp"
            android:textColor="@color/design_default_color_primary_dark"
            app:layout_constraintTop_toTopOf="@id/img_book_cover_preview"
            app:layout_constraintStart_toEndOf="@id/img_book_cover_preview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/img_book_cover_preview"
            app:layout_constraintVertical_bias="0.1"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_title"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_image_hint"
            app:layout_constraintStart_toEndOf="@id/img_book_cover_preview"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Title * (Required)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_author"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/input_layout_title"
            app:layout_constraintStart_toEndOf="@id/img_book_cover_preview"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Author * (Required)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_genre"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/input_layout_author"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Genre / Tags">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_book_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_isbn"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/input_layout_genre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="ISBN (10 or 13 digits)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_book_isbn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="13" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_publisher"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/input_layout_isbn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Publisher">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_book_publisher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_year"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/input_layout_publisher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/input_layout_pages"
            android:hint="Year">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_book_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="4" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_pages"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/input_layout_publisher"
            app:layout_constraintStart_toEndOf="@id/input_layout_year"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Pages">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_book_pages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_is_loaned"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="Currently Loaned Out" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/input_layout_year"
            app:layout_constraintStart_toStartOf="parent"/>

        <RadioGroup
            android:id="@+id/radio_group_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_status">

            <RadioButton
                android:id="@+id/radio_status_owned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Owned" />

            <RadioButton
                android:id="@+id/radio_status_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Read" />

            <RadioButton
                android:id="@+id/radio_status_wishlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Wishlist" />
        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/menu_bookcase"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Select Bookcase">

            <AutoCompleteTextView
                android:id="@+id/auto_complete_bookcase"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_summary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/radio_group_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Summary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_book_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:minLines="3" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_notes"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/input_layout_summary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Notes / Review">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_book_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:minLines="4"
                android:inputType="textMultiLine" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_save_book"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_save"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/input_layout_notes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_back_book"/>

        <Button
            android:id="@+id/btn_back_book"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_back"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:layout_constraintTop_toTopOf="@id/btn_save_book"
            app:layout_constraintStart_toEndOf="@id/btn_save_book"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btn_delete_book"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_delete_book"
            android:textColor="@color/design_default_color_error"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_marginTop="16dp" android:layout_marginBottom="32dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/btn_save_book"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>